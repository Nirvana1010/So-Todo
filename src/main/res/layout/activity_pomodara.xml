<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pomodara"
    android:background="@drawable/bkg2_new">

    <TextClock
        android:id="@+id/clock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="3"
        android:format12Hour="hh:mm:ss"
        android:format24Hour="HH:mm:ss"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="jelly_bean_mr1" />

    <TextClock
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:format12Hour="yyyy/MM/dd E"
        android:format24Hour="yyyy/MM/dd E"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        tools:targetApi="jelly_bean_mr1" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="244dp"
        android:text="开始"
        android:background="@drawable/normal_btn"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="244dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="96dp"
        android:text="停止"
        android:background="@drawable/normal_btn"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="96dp" />

    <TextView
        android:id="@+id/pd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:text="1.番茄钟(25min)"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/rest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="    休息(5min)"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pd1"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/pd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="2.番茄钟(25min)"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest1"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/rest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="    休息(5min)"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/pd1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pd2"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/pd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="3.番茄钟(25min)"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/pd1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest2"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/rest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="    休息(5min)"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/pd1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pd3"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/pd4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="4.番茄钟(25min)"
        android:textColor="@android:color/black"

        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/pd1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest3"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/pd_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="25:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pd1"
        app:layout_constraintTop_toTopOf="@+id/pd1"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/rest_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="05:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rest1"
        app:layout_constraintTop_toTopOf="@+id/rest1"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/pd_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="25:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pd2"
        app:layout_constraintTop_toTopOf="@+id/pd2"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/rest_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="05:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rest2"
        app:layout_constraintTop_toTopOf="@+id/rest2"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/pd_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="25:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pd3"
        app:layout_constraintTop_toTopOf="@+id/pd3"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/rest_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="05:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rest3"
        app:layout_constraintTop_toTopOf="@+id/rest3"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/pd_time4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="25:00"
        android:textColor="#DC143C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pd4"
        app:layout_constraintTop_toTopOf="@+id/pd4"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="18sp"
        android:text="NULL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="59dp" />

</androidx.constraintlayout.widget.ConstraintLayout>